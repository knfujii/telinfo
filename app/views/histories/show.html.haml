.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), histories_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_history_path(@history), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), history_path(@history), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
