- model_class = History
.page-header
  %h1=t '.title', :default => model_class.model_name.human
%table.table.table-striped.table-bordered.table-condensed
  %thead
    %tr
      %th= model_class.human_attribute_name(:incident_no)
      %th= model_class.human_attribute_name(:customer_no)
      %th(colspan=2)= model_class.human_attribute_name(:customer_name)
      %th= model_class.human_attribute_name(:rank)
      %th(rowspan=2)= model_class.human_attribute_name(:title)
      %th(rowspan=2)= model_class.human_attribute_name(:details)
      %th= model_class.human_attribute_name(:category)
      %th= model_class.human_attribute_name(:priority)
      %th= model_class.human_attribute_name(:period_contact_on)
      %th(rowspan=2)= model_class.human_attribute_name(:status)
      %th= model_class.human_attribute_name(:target_on)
      %th(colspan=2 rowspan=2)=t '.actions', :default => t("helpers.actions")
    %tr
      %th= model_class.human_attribute_name(:acceptance_at)
      %th= model_class.human_attribute_name(:acceptance_user)
      %th= model_class.human_attribute_name(:customer_user)
      %th= model_class.human_attribute_name(:primary_user)
      %th= model_class.human_attribute_name(:support_user)
      %th= model_class.human_attribute_name(:target)
      %th= model_class.human_attribute_name(:necessity_contact)
      %th= model_class.human_attribute_name(:first_contact_at)
      %th= model_class.human_attribute_name(:completion_on)
  %tbody
    - @histories.each do |history|
      %tr
        %td= history.incident_no
        %td= history.customer_no
        %td(colspan=2)= history.customer_name
        %td= history.rank
        %td(rowspan=2)= history.title
        %td(rowspan=2)= history.details
        %td= history.category
        %td= history.priority
        %td= l history.period_contact_on, :format => :short
        %td(rowspan=2)= history.status
        %td= l history.target_on, :format => :short
        %td(colspan=2 rowspan=2)
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_history_path(history), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), history_path(history), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
      %tr
        %td= l history.acceptance_at, :format => :short
        %td= history.acceptance_user
        %td= history.customer_user
        %td= history.primary_user
        %td= history.support_user
        %td= history.target
        %td= history.necessity_contact
        %td= l history.first_contact_at, :format => :short
        %td= l history.completion_on, :format => :short

= link_to t('.new', :default => t("helpers.links.new")), new_history_path, :class => 'btn btn-primary'
